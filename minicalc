lst = []
y = int(input("How many numbers do you want to calculate?"))
for x in range(y): 
	inp_numbers = int(input("Input Number Here\n "))
	final_list = lst.append(inp_numbers)
	
print("Sum of the list elements: ", (sum(final_list)))
